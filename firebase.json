{
  "functions": [
    {
      "source": "functions",
      "codebase": "pickle-glass",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "pnpm -C \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  
  "hosting": {
    "public": "pickleglass_web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
