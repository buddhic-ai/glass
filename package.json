{
    "name": "pickle-glass",
    "productName": "Glass",
    "version": "0.2.4",
    "description": "Cl*ely for Free",
    "main": "src/index.js",
    "scripts": {
        "setup": "pnpm install && pnpm -C pickleglass_web run build && pnpm start",
        "start": "pnpm run build:renderer && electron .",
        "dev:web": "pnpm -C pickleglass_web run dev",
        "dev": "cross-env pickleglass_WEB_URL=http://localhost:3000 pnpm -C pickleglass_web run dev & pnpm run watch:renderer & pnpm exec electron .",
        "package": "pnpm run build:all && node scripts/prepare-whisper.js && electron-builder --dir",
        "make": "pnpm run build:renderer && electron-forge make",
        "build": "pnpm run build:all && node scripts/prepare-whisper.js && electron-builder --config electron-builder.yml --publish never",
        "build:win": "pnpm run build:all && node scripts/prepare-whisper.js && electron-builder --win --x64 --publish never",
        "publish": "pnpm run build:all && node scripts/prepare-whisper.js && electron-builder --config electron-builder.yml --publish always",
        "lint": "eslint --ext .ts,.tsx,.js .",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "node build.js",
        "build:web": "pnpm -C pickleglass_web run build",
        "build:all": "pnpm run build:renderer && pnpm run build:web",
        "watch:renderer": "node build.js --watch"
    },
    "keywords": [
        "glass",
        "pickle glass",
        "ai assistant",
        "real-time",
        "live summary",
        "contextual ai"
    ],
    "author": {
        "name": "Pickle Team"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.56.0",
        "@deepgram/sdk": "^4.9.1",
        "@google/genai": "^1.8.0",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.10.0",
        "better-sqlite3": "^9.6.0",
        "cors": "^2.8.5",
        "dotenv": "^17.0.0",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.2",
        "firebase": "^11.10.0",
        "firebase-admin": "^13.4.0",
        "jsonwebtoken": "^9.0.2",
        "keytar": "^7.9.0",
        "node-fetch": "^2.7.0",
        "openai": "^4.70.0",
        "portkey-ai": "^1.10.1",
        "react-hot-toast": "^2.5.2",
        "sharp": "^0.34.2",
        "validator": "^13.11.0",
        "wait-on": "^8.0.3",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/notarize": "^2.5.0",
        "electron": "^30.5.1",
        "electron-builder": "^26.0.12",
        "electron-reloader": "^1.2.3",
        "esbuild": "^0.25.5",
        "cross-env": "^7.0.3",
        "prettier": "^3.6.2"
    },
    "optionalDependencies": {
        "electron-liquid-glass": "^1.0.1"
    },
    "packageManager": "pnpm@9.12.0"
}
